@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    var year = DateTime.Now.Year;
    var month = DateTime.Now.Month;
}

<div class="card w-100">
    <div class="card-body p-4">
        <h5 class="card-title fw-semibold mb-4">Thống kê số lượng đặt tour theo tháng</h5>
        <div class="col-md-12">
            <div class="k-card">
                <div class="card-body">
                    <div class="card-title row">
                        <div class="col-md-4">
                            @Html.DropDownListFor(model => year, ViewBag.Years as System.Collections.Generic.IEnumerable<SelectListItem>, "-- Chọn năm --", new { @Class = "form-control", @onchange = "load4()" })
                        </div>
                        <div class="col-md-4">
                            @Html.DropDownListFor(model => month, ViewBag.Months as System.Collections.Generic.IEnumerable<SelectListItem>, "-- Chọn tháng --", new { @Class = "form-control", @onchange = "load4()" })
                        </div>
                        <div class="col-md-2">
                            <a onclick="toExport()" class="btn btn-icon btn-success"><i class='ti ti-file-export'></i></a>
                        </div>
                    </div>
                    <div>
                        <figure class="highcharts-figure">
                            <div id="container-3"></div>
                            <p class="highcharts-description">
                                Biểu đồ thể hiện tổng số lượng đặt Tour của các tháng trong năm.
                            </p>
                        </figure>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        function toExport(){
            var y = document.getElementById("year").value === "" ? 0 : document.getElementById("year").value
            var m = document.getElementById("month").value === "" ? 0 : document.getElementById("month").value
            window.location.href = `/Dashboard/ExportFileDay?year=${y}&month=${m}`
        }
        $(document).ready(function () {

            load4();
        });
        function load4() {
            var y = document.getElementById("year").value === "" ? 0 : document.getElementById("year").value
            var m = document.getElementById("month").value === "" ? 0 : document.getElementById("month").value
            $.ajax({
                url: `/api/Chart/GetChartByMonthYear?year=${y}&month=${m}`,
                processData: false,
                contentType: false,
                type: "get",
                success: function (result) {
                    console.log(result)
                    var arrVN = []
                    var arrTitle = []
                    result.forEach(ele => {
                        arrVN.push(ele.tong)
                        arrTitle.push(ele.day)
                    })
                    Highcharts.chart('container-3', {
                        chart: {
                            type: 'line'
                        },
                        title: {
                            text: 'Tổng số lượng đặt tour hàng tháng trong năm'
                        },
                        subtitle: {
                            //text: 'Source: ' +
                            //    '<a href="https://en.wikipedia.org/wiki/List_of_cities_by_average_temperature" ' +
                            //    'target="_blank">Wikipedia.com</a>'
                        },
                        xAxis: {
                            categories: arrTitle
                        },
                        yAxis: {
                            title: {
                                text: 'Số lượng'
                            }
                        },
                        plotOptions: {
                            line: {
                                dataLabels: {
                                    enabled: true
                                },
                                enableMouseTracking: false
                            }
                        },
                        series: [{
                            name: 'Số lượng',
                            data: arrVN
                        }]
                    });
                }
            })
        }
    </script>
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/data.js"></script>
    <script src="https://code.highcharts.com/modules/drilldown.js"></script>
    <script src="https://code.highcharts.com/modules/accessibility.js"></script>
}

