@{
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model KhachHang

<div class="card w-100" style="margin-top: 20px">
	<div class="card-body p-4">
		<h5 class="card-title fw-semibold mb-4">Thông tin cá nhân</h5>
		<form method="post">
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="row">
				<div class="form-group mb-3 col-6">
					<label asp-for="HoTen"></label> *
					<input asp-for="HoTen" class="form-control" disabled />
					<span asp-validation-for="HoTen" class="text-danger"></span>
				</div>
				<div class="form-group mb-3 col-6">
					<label asp-for="Email"></label> *
					<input asp-for="Email" class="form-control" disabled />
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
				<div class="form-group mb-3 col-6">
					<label asp-for="CCCD"></label> *
					<input asp-for="CCCD" class="form-control" disabled />
					<span asp-validation-for="CCCD" class="text-danger"></span>
				</div>
				<div class="form-group mb-3 col-6">
					<label asp-for="Dienthoai"></label>
					<input asp-for="Dienthoai" class="form-control" disabled />
					<span asp-validation-for="Dienthoai" class="text-danger"></span>
				</div>
				<div class="form-group mb-3 col-6">
					<label asp-for="Gioitinh"></label>
					<select asp-for="Gioitinh" class="form-control" asp-items="@(new SelectList(ViewBag.GTs, "Value", "Text"))" disabled>
						<option value=""> -- Chọn giới tính -- </option>
					</select>
					<span asp-validation-for="Gioitinh" class="text-danger"></span>
				</div>
				<div class="form-group mb-3 col-6">
					<label asp-for="NgaySinh"></label>
					<input type="date" asp-for="NgaySinh" class="form-control" disabled />
					<span asp-validation-for="NgaySinh" class="text-danger"></span>
				</div>
				<div class="form-group mb-3 col-12">
					<label asp-for="Diachi"></label>
					<input asp-for="Diachi" class="form-control" disabled />
					<span asp-validation-for="Diachi" class="text-danger" ></span>
				</div>
				<div class="form-group-0 col-12">
					<a href="@Url.Action("Index")" class="btn btn-primary">Trở về</a>
				</div>
			</div>
		</form>
	</div>
</div>