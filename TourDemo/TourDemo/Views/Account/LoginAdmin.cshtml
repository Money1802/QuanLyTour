@{
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}
@model TaiKhoan
<div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
     data-sidebar-position="fixed" data-header-position="fixed">
    <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
        <div class="d-flex align-items-center justify-content-center w-100">
            <div class="row justify-content-center w-100">
                <div class="col-md-8">
                    <div class="card mb-0">
                        <div class="card-body">
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="text-nowrap logo-img text-center d-block py-3 w-100">
                                <img src="~/Uploads/security.png" width="180" alt="">
                            </a>
                            <p class="text-center">Đăng nhập quản lý dữ liệu</p>
                            <form method="post">
                                <div class="mb-3">
                                    <label for="exampleInputEmail1" class="form-label">Tên đăng nhập</label>
                                    @Html.TextBoxFor(m=>m.TenDN, new {@class = "form-control"})
                                    <span asp-validation-for="TenDN" class="text-danger"></span>
                                </div>
                                <div class="mb-4">
                                    <label for="exampleInputPassword1" class="form-label">Mật khẩu</label>
                                    @Html.TextBoxFor(m=>m.MatkhauDN, new {@class = "form-control", @type="password"})
                                    <span asp-validation-for="MatkhauDN" class="text-danger"></span>
                                </div>
                                <button type="submit" class="btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2">Đăng Nhập</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>